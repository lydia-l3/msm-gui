<h1>
  Actor #<%= @the_actor.id %> details
</h1>

<a href="/actors">
  Go back
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_actor.image %>" style="width:250px;">
  </dd>
  
  <dt>
    Actor
  </dt>
  <dd>
    <% act_id = @the_movie.actor_id %>

    <% matching_actors = Actor.where({ :id => act_id }) %>

    <% the_actor = matching_actors.at(0) %>

    <% if the_actor == nil %>
      Uh oh! We weren't able to find an actor for this movie.
    <% else %>
      <%= the_actor.name %>
    <% end %> 
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @the_actor.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @the_actor.updated_at %>
  </dd>
</dl>

<hr>
